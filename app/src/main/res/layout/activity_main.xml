<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam_malik.orlando.MainActivity"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"


                android:src="@drawable/welly"
                />

            <EditText
                android:id="@+id/Fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Of Guests" />

            <RadioButton
                android:id="@+id/radioBtn1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="500" />

            <RadioButton
                android:id="@+id/radioBtn2"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="1000" />

            <RadioButton
                android:id="@+id/radioBtn3"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="1500" />

            <RadioButton
                android:id="@+id/radioBtn4"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="2000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitchen service" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioBtn5"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioBtn6"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="No" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decorator" />

            <RadioButton
                android:id="@+id/radioBtn7"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioBtn8"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="No" />

            <Button
                android:id="@+id/BookBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit"
                android:text="Book now" />


        </LinearLayout>




    </ScrollView>

</LinearLayout>
